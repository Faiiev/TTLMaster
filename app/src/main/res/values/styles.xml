<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorNavBar</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorNavBar</item>
    </style>

    <style name="Main_Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="Main_Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/onpress</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>